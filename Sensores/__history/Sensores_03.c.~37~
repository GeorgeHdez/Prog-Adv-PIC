#include <18f4550.h>
#device ADC = 10;
#include <string.h>
#FUSES XT,NOPROTECT,NOLVP,NOWDT
#use delay(clock = 20M)
#use rs232(rcv=pin_c7,xmit=pin_c6,baud=9600,bits=8,parity=N)

void main() {
  /* code */
  
  
  while (TRUE) {
    /* code */
    
    char hola;
    
    
    printf("Que letra quieres");
    hola = getchar();
    
    printf("Escogiste una letra");
    
    switch(hola){
    
    
    case 'x':{
    
      output_toggle(pin_d0);
      delay_ms(1000);
    
    }
    }
  }
}
